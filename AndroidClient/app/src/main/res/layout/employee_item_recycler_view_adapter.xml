<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:minWidth="200dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/employeeItemFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Hernani Baptista"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textView_Employee" />

                <TextView
                    android:id="@+id/employeeItemEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="baptistamhernani@gmail.com"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textView_Employee" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/employeeItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:text="INACTIVE"
                android:textSize="@dimen/textView_Employee" />
        </LinearLayout>

<!--            <View-->
<!--                android:layout_height="3dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:background="@color/blue"-->
<!--                />-->
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:background="@color/blue"
        />

</LinearLayout>