<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/test"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:minWidth="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employeeItemFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Hernani Baptista"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textView_Employee" />

                <TextView
                    android:id="@+id/employeeItemEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="baptistamhernani@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="@dimen/email_Employee_info" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/employeeItemPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="16dp"
                    android:text="9541850"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textView_Employee" />
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="3dp"-->
    <!--        android:background="@color/blue" />-->

</LinearLayout>